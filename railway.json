{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r dialfa-analytics/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd dialfa-analytics && gunicorn --bind 0.0.0.0:$PORT --workers 4 --timeout 120 'app:create_app()'",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
